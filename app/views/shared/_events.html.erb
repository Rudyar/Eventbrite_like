<div class="container">
  <div class="row justify-content-center text-center">
    <% @events.each do |event| %>
      <div class="card m-3" style="width: 25rem;">
        <div class="card-body">
          <h4 class="card-header"><%= event.title %></h4>
          <%= image_tag  event.event_picture, class: "event_card_img" %>
          <div class="card-body">
            <p class="card-text"><%=event.start_date%></p>
          </div>
          <div class="card-body">
            <p class="card-text"><%=event.description%></p>
          </div>
          <div class="card-body">
            <%= link_to "Page de l'événement", event_path(event.id), :class => "btn btn-outline-primary btn-sm" %>
          </div>
          <div class="card-body">
            <p class="card-text text-muted"><small>Créé par: <%= event.event_admin.email %></small></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

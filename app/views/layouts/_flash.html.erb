

<% flash.each do |type, msg|%>

  <% if @event == nil %>
    <div class="container">
        <div class="text-center alert <%= bootstrap_class_for_flash(type) %> mt-5" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
          <ul class="list-unstyled">
            <li class="text-center m-3"><%= msg %></li>
          </ul>
        </div>
      </div>
  <% else %>
    <% if @event.errors.any? %>
      <div class="container">
        <div class="alert alert-danger mt-5 " role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
          <h2 class="text-center">
            <%= I18n.t("errors.messages.not_saved",
                      count: @event.errors.count,
                      resource: @event.class.model_name.human.downcase)
            %>
          </h2>
          <ul class="navbar-nav">
            <% @event.errors.full_messages.each do |message| %>
              <li class="text-center"><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
  <% end %>
  
<%end%>
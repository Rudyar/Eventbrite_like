<div class="container p-2">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br><br><br>
      <%= form_for @event, html: { class: "form-signin mt-3" }, multipart: true do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Créer un événement</h1>
        <div class="form-group">
          <%= f.label :title, "Tire de l'événement" %><br />
          <%= f.text_field :title, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group md">
          <%= f.label :start_date %>
          <%= f.datetime_field :start_date, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :duration, "Durée de l'événement en minutes " %><br />
          <%= f.text_field :duration, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description, "Description de l'événement" %><br />
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :price, "Prix de l'événement" %><br />
          <%= f.text_field :price, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :location, "Où va se passer l'événement" %><br />
          <%= f.text_field :location, class: "form-control" %>
        </div>
        <div class="form-group text-center">
          <%= f.label :event_picture, "Ajouter une photo" %><br />
          <%= f.file_field :event_picture %>
        </div>
        <div class="actions mt-5">
          <%= f.submit "Créer", class: "btn btn-md btn-primary btn-block", required: true %>
        </div>
      <% end %>
    </div>
  </div>
</div>
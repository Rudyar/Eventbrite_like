<div class="jumbotron">
  <div class="container">
    <h1>Découvres les événements de ta ville !</h1>
  </div>
</div>

 <div class="row justify-content-center">
    <% @events.each do |event| %>
      <div class="card m-3" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= event.title %></h5>
          <p class="card-text">Créé par: <%= event.event_admin.email %></p>
          <p class="card-text text-muted"><small>blabla</small></p>
          <%= link_to "See the full event", event_path(event.id), :class => "btn btn-outline-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
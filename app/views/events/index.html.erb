<!-- Jumbotron -->
<div class="jumbotron text-center">

  <!-- Title -->
  <h4 class="card-title h4 pb-2"><strong>Découvres les événements de ta ville !</strong></h4>

  <!-- Card image -->
  <div class="view overlay my-4">
    <img src="https://cdn.france-montagnes.com/sites/default/files/styles/header_webzine/public/header/banniere-yoga-montagne.png?itok=cDKhWQBp" class="img-fluid" alt="">
      <div class="mask rgba-white-slight"></div>
  </div>

  <h5 class="indigo-text h5 mb-4">⏬ Les derniers événements ⏬</h5>
</div>
<!-- Jumbotron -->

 <div class="row justify-content-center">
    <% @events.each do |event| %>
      <div class="card m-3" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= event.title %></h5>
          <p class="card-text"><%=event.start_date%></p>
          <p class="card-text text-muted"><small>Créé par: <%= event.event_admin.email %></small></p>
          <%= link_to "Page de l'événement", event_path(event.id), :class => "btn btn-outline-primary" %>
        </div>
      </div>
    <% end %>
  </div>